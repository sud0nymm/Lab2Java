package lab2;
import java.util.ArrayList;

public class Dictionairy {
private ArrayList<Word> thelist;
private ArrayList<Word> backup = null;

public Dictionairy() {}

public String addString(String arg) {
	Word w = new Word("empty", 0);
	int counter = 0;
	
	for (int i = 0; i < thelist.size(); i++) {

		if (thelist.get(i).getWord().compareTo(arg) == 0) {
			counter = thelist.get(i).getCount();
			Word s = new Word(arg, counter + 1);
			w = s;
		}
		else {
			Word s = new Word(arg, 1);
			w = s;
		}
	}
	
	thelist.add(w);
	return w.toString();
}


