        for (j = 0; j < thelist.size() - i - 1; j++) {
            if (thelist.get(j).compareTo(thelist.get(j+1)) > 0){
            	
            	// FIX THIS SHIT
                /*
            	Word temp;
                temp = thelist[j + 1];
                thelist[j + 1] = thelist[i];
                thelist[i] = temp;
                */
            }
        }
    }
}

public String toString() {
	
	String s = "fuck";
	//String s = "Content:\n" + 
	
	for (int i = 0; i < thelist.size(); i++) {
		thelist.get(i);
	}
