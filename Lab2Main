package lab2;
import java.io.*;
import java.util.Scanner;

public class Lab2Main {

	public static void main(String[] args) throws IOException{
		
		Scanner s = new Scanner(System.in);
		
		System.out.println("Type filename:");
		String input = s.nextLine();	
		File f = new File(input);
		
		while (f.exists() == false) {
			System.out.println("Type filename:");
			input = s.nextLine();
			f = new File(input);
			if (f.exists() == true) {
				System.out.println("file exists");
				s.close();
				break;
			}
		}
		
		FileReader fr = new FileReader(input);
		BufferedReader br = new BufferedReader(fr);
		
		Scanner scan = new Scanner(fr);
		StringBuilder s2 = new StringBuilder();

		while (scan.hasNextLine()) {
		    String line = scan.nextLine().trim(); 
		    if (!line.isEmpty()) {
		        s2.append(line).append(" ");
		    }
		}

		scan.close();
		String s3 = s2.toString().trim();
		s3 = s3.toLowerCase();
		
		String[] result = s3.split(" +");
		Dictionairy dairy = new Dictionairy();
		
		for (int i = 0; i < result.length; i++) {
			dairy.addString(result[i]);
		}
		
		System.out.println(dairy);
		System.out.println(dairy.sortList(1) + dairy);
		//System.out.println(dairy.sortList(2) + dairy);
		//System.out.println(dairy.sortList(0) + dairy);

		
	}
}
